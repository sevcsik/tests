{% extends '::base.html.twig' %}
{% set title = 'Edit Study' %}

{% block page_content %}
{% if display_form %}
<form method="post" {{ form_enctype(form) }}>
  {{ form_widget(form) }}
  <input type="submit" value="Submit">
</form>
{% else %}
    <p class="{% if success %}success{% else %}error{% endif %}">
        {{ action | capitalize }} action on study
        {{ study.getStudent().getName() }} at {{ study.getSchool.getName() }}
        {% if success %}succeeded{% else %}failed.{% endif %}.
        {% if error is defined and error %}
        Error: {{ error }}
        {% endif %}
    </p>     
{% endif %}
<a href="javascript:history.back(2)">Go back</a>
{% endblock %}

